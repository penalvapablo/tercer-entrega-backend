<%- include('./partials/header.ejs') %>
<body>
  <div class="card" style="width: 18rem">
    <img src="<%= product.img %>"
      class="card-img-top" alt="..." />
    <div class="card-body">
      <h5 class="card-title">Nombre: <%= product.name %></h5>
      <p class="card-text">Descripcón: <%= product.description %></p>
      <p class="card-text" name="code" >Código: <%= product.code %></p>
      <p class="card-text">Precio: $<%= product.price %></p>
  
    </div>
    <form class="form" action="/products/list/:id"  method="post" role="form" autocomplete="off">
      <div class="form-group">
        <input
          id="quantity"
          name="quantity"
          placeholder="cantidad"
          class="form-control"
          type="number"
          required
        />
        <button class="btn btn-success my-3 submit" type="submit">Agregar al carrito</button>
    </form>
    
    <a href="/" class="btn btn-primary">Volver a inicio</a>
  </div>
</body>
